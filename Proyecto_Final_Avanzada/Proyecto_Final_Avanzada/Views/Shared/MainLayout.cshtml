<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" http-equiv="content-type" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~Content/css")
    @Scripts.Render("~bundles/modernizr")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container panel-primary">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            </button>
            @Html.ActionLink("Inicio", "Inicio", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>

        <div class="navbar-collapse collapse">

            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Clientes", "Index", "clientes")</li>
                <li>@Html.ActionLink("Empleados", "Index", "empleadoes")</li>
                <li>@Html.ActionLink("Funciones", "Index", "funcions")</li>
                <li>@Html.ActionLink("Películas", "Index", "peliculas")</li>
                <li>@Html.ActionLink("Proyecciones", "Index", "proyeccions")</li>
                <li>@Html.ActionLink("Reservas", "Index", "reservas")</li>
                <li>@Html.ActionLink("Salas", "Index", "salas")</li>
                <li>@Html.ActionLink("Sucursales", "Index", "sucursals")</li>
            </ul>

        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Proyecto Final - Cine</p>
        </footer>
    </div>
</body>
</html>